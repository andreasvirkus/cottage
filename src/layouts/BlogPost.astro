---
import type { CollectionEntry } from 'astro:content'
import Base from '../layouts/Base.astro'
import FormattedDate from '../components/FormattedDate.astro'
import { getReadingTime } from '../utils/reading-time'
import { getConicGradient } from '../utils/conic-art'

type Props = CollectionEntry<'thoughts'>['data']

const { title, pubDate, updatedDate } = Astro.props
const { slug, post } = Astro.params
---

<Base>
  <style>
    main {
      width: calc(100% - 2em);
      max-width: 100%;
      margin: 0;
    }
    .hero-image {
      width: 100%;
      background-image: var(--hero-gradient);
    }
    .hero-image {
      display: block;
      margin: 0 auto;
      height: 200px;
      border-radius: 12px;
      box-shadow: var(--box-shadow);
    }
    .title {
      margin-bottom: 1em;
      padding: 1em 0;
      text-align: center;
      line-height: 1;
    }
    .title h1 {
      margin: 0 0 0.5em 0;
    }
    .date {
      margin-bottom: 0.5em;
      color: rgb(var(--gray));
    }
    .last-updated-on {
      font-style: italic;
    }
  </style>

  <article>
    <div class="hero-image" style={`--hero-gradient: ${getConicGradient(slug || '')}`}></div>

    <div class="title">
      <h1>{title}</h1>
      <div class="date">
        <FormattedDate date={pubDate} />
        {
          updatedDate && (
            <div class="last-updated-on">
              Last updated on <FormattedDate date={updatedDate} />
            </div>
          )
        }
      </div>
      {
        post && (
          <div class="reading-time">
            {getReadingTime(post)} minutes to read
            <hr />
          </div>
        )
      }
    </div>

    <slot />
  </article>
</Base>
