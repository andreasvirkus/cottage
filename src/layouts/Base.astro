---
import { ClientRouter } from 'astro:transitions';

import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts'
---

<!doctype html>
<html lang="en">
  <head>
    <!-- <ClientRouter /> -->
    <!-- Whitespace matters (CSP hashing) -->
    <script is:inline>const theme = localStorage.getItem('_cottageTheme')
if (theme) document.documentElement.setAttribute('data-theme', theme)

document.addEventListener('astro:after-swap', () => {
  const theme = localStorage.getItem('_cottageTheme')
  if (theme) document.documentElement.setAttribute('data-theme', theme)
})</script>

    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />

    <script is:inline data-goatcounter="https://kano.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
    <script>
      import { playSound, type Sound } from '../utils/play-sound.ts'

      window.addEventListener('click', (event) => {
        let target = event.target as HTMLElement | null
        if (target?.dataset.sound === undefined) {
          target = target?.closest('[data-sound]') as HTMLElement | null
        }

        if (target === null) return

        if (target instanceof HTMLAnchorElement) {
          event.preventDefault()
          // Immediately start loading next page in background
          const link = document.createElement('link')
          link.rel = 'prefetch'
          link.href = target.href
          document.head.appendChild(link)
        }

        playSound(target.dataset.sound as Sound)

        if (target instanceof HTMLAnchorElement) {
          setTimeout(() => {
            window.location.href = target.href
          }, 350)
        }
      })
    </script>
  </body>
</html>
