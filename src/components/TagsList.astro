---
interface Props {
  tags: string[];
  showAll?: boolean;
  centered?: boolean;
}

const { tags, showAll } = Astro.props
---

<div class="tags">
  {showAll && <a href="/thoughts" class="tag">
    all
  </a>}
  {
    Array.from(tags).map((tag) => (
      <a href={'/thoughts/tagged/' + tag} class="tag">{tag}</a>
    ))
  }
</div>

<style>
  .tags {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    column-gap: 1.5em;
    row-gap: 0.5em;
    margin-bottom: 2em;
    overflow: hidden; /* Hide seperators when wrapping */
  }

  .centered {
    justify-content: center;
  }

  .tag::before {
    content: '*';
    position: absolute;
    translate: -1.1em 0;
  }
  </style>
