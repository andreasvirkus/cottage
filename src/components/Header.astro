---
import HeaderLink from './HeaderLink.astro'
---

<header class="grid-background" id="header">
  <nav class="hide-print">
    <h2><a data-sound="swoosh" href="/">the c<span>รถ</span>ttage</a></h2>
    <div class="links">
      <HeaderLink data-sound="swoosh" href="/">~</HeaderLink> /
      <HeaderLink data-sound="mouseClick" href="/me">me</HeaderLink> /
      <HeaderLink data-sound="mouseClick" href="/thoughts">thoughts</HeaderLink> /
      <HeaderLink data-sound="mouseClick" href="/contact">contact</HeaderLink>
    </div>
  </nav>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    background-color: var(--background-color);
    padding: 0.5em 2em 1em;
    /* Hide overlap with the grid background and body outline */
    margin: 0 -1px;
    z-index: 2;

    @media (max-width: 720px) {
      font-size: 0.8em;
      margin: 0 -4px;
      width: calc(100% + 2 * 4px);
    }
  }
  h2 {
    font-size: 1em;
  }

  header h2 span {
    color: var(--link-color);
    transition: color 0.3s ease-out;
  }
  h2 a:hover span {
    color: var(--text-color);
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
    color: var(--text-color);
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  @media (max-width: 720px) {
    header {
      padding: 0.2em 0;
    }

    .links {
      margin: 0 auto;
    }

    h2 {
      display: none;
    }
  }
</style>
